<h1><%= @list.name %></h1>
<h2>Bookmarks</h2>
<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to "Delete",
                  bookmark_path(bookmark),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'retour au liste', lists_path %>
<%= link_to "Ajouter un bookmark", new_list_bookmark_path(@list) %>
