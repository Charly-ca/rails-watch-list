

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
     <i class="fa-solid fa-video"></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "My list", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "New list", "#", class: "nav-link" %>
          </li>
      </ul>
    </div>
  </div>
</div>
<div class="position-relative">
  <img src="<%= asset_path('banner.jpg') %>" class="img-fluid w-100" alt="Image d'accueil" style="height: 750px; object-fit: cover;">

  <div class="position-absolute top-50 start-50 translate-middle text-center text-white p-3"
       style="background-color: rgba(0, 0, 0, 0.3); border-radius: 8px;">
    <h1 class="display-4 fw-bold">Save any kind of</h1>
    <p class="lead">Classic Movies</p>
  </div>
</div>

<div class= 'container'>


<h1>My Lists</h1>

<div class="d-flex justify-content-end mb-3">
  <%= link_to 'Create a movie list', new_list_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-3 mb-4">
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <div class="card h-100 text-center p-3">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
